<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">


        <Button
            android:id="@+id/setting_back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테마"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/setting_back_btn"
            android:layout_marginLeft="21dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#707070"
            android:text="현재 테마"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/setting_theme_nowtheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파스텔"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <Button
                android:id="@+id/setting_theme_beforebtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"/>

            <TextView
                android:id="@+id/setting_theme_nowthemetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파스텔"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>


            <Button
                android:id="@+id/setting_theme_afterbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FF8585"
                android:layout_marginRight="30dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FFB367"
                android:layout_marginRight="30dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FFEE77"
                android:layout_marginRight="30dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#89F290"
                >

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#9EAAFF"
                android:layout_marginRight="30dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#DC7CFF"
                android:layout_marginRight="30dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FFAADB"
                android:layout_marginRight="30dp"
                >

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#C6C6C6"
                >

            </RelativeLayout>


        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="테마 선택"
                android:background="@drawable/theme_chooser_btn_background"
                android:textColor="#000000"
                android:textSize="16dp"
                />


        </RelativeLayout>
        
        


    </LinearLayout>



</LinearLayout>