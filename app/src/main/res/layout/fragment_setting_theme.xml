    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#707070"
            android:text="현재 테마"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/setting_theme_nowtheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파스텔"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <Button
                android:id="@+id/setting_theme_beforebtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"
                android:background="@drawable/setting_theme_back_btn"/>

            <TextView
                android:id="@+id/setting_theme_nowthemetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파스텔"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>


            <Button
                android:id="@+id/setting_theme_afterbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27dp"
                android:background="@drawable/setting_theme_next_btn"/>

        </RelativeLayout>

        
        <android.support.v4.view.ViewPager
            android:id="@+id/setting_theme_viewpager"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </android.support.v4.view.ViewPager>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="290dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="테마 선택"
                android:background="@drawable/theme_chooser_btn_background"
                android:textColor="#000000"
                android:textSize="16dp"
                />


        </RelativeLayout>
        
        


    </LinearLayout>



</LinearLayout>