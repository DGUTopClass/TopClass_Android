<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">


        <Button
            android:id="@+id/setting_back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학번 및 비밀번호"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/setting_back_btn"
            android:layout_marginLeft="21dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/setting_profile_studentnumtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#707070"
            android:text="학번"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/setting_profile_studentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016112141"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/setting_profile_passwordtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#707070"
            android:text="비밀번호"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/setting_profile_passwordnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*************"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/setting_profile_modify_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_background_stroke"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학번 및 비밀번호 변경"
            android:textColor="#707070"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


</LinearLayout>