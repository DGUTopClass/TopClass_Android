<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/fy_detail_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="2dp"
        android:background="@color/white">

        <include
            layout="@layout/header_setting_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/ry_detail_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fy_detail_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detail_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다학제캡스톤디자인"
                android:textColor="@color/mainColor"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다학제 캡스톤 디자인 Homework #1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="right"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/iv_calendar"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018/12/19 ~ 2018/12/21"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>


            <FrameLayout
                android:id="@+id/fl_hw_detail_contents_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:id="@+id/rl_hw_detail_contents_collapse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_contents_collapse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="3dp"
                            android:maxLines="4"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_hw_detail_contents_concrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_contents_concrete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="3dp"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />

                    </RelativeLayout>

            </FrameLayout>

            <Button
                android:id="@+id/btn_hw_detail_contents"
                android:layout_width="36dp"
                android:layout_height="17dp"
                android:layout_gravity="right"
                android:text="+더보기"
                android:textSize="11sp"
                android:textColor="#AFAFAF"
                android:background="#00ff0000"
                android:layout_marginTop="8dp" />

            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">

            <TextView
                android:id="@+id/tv_memo"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:hint="메모"
                android:textSize="11dp"
                android:textColor="#AFAFAF"
                android:padding="10dp"
                android:gravity="left"
                android:background="@drawable/hw_detail_memo_border"
                android:visibility="visible"
                />

                // 일단은 framelayout으로 처리했는데, header랑 같이 바뀌어야 해서,,
                // 어떻게 해야할지 나중에 좀 더 생각해보기!
            <EditText
                android:id="@+id/et_memo"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:textSize="11dp"
                android:textColor="#AFAFAF"
                android:padding="10dp"
                android:gravity="left"
                android:background="@drawable/hw_detail_memo_border"
                android:visibility="invisible"
                />

        </FrameLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/homework_detail_alarm_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>