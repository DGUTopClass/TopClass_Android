<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gray"></View>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="28dp">

        <RelativeLayout
            android:layout_width="96dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과목명"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="45dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/todo_border_bottom"></View>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"></Spinner>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="96dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과제명"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="45dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/todo_border_bottom"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="96dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="설명"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="45dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/todo_border"
                android:hint="과제 설명 입력"
                android:textSize="13dp"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"/>

        </RelativeLayout>

    </LinearLayout>

    // 시작, 종료 default 뭘로 할지 !
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginTop="37dp">

        <RelativeLayout
            android:layout_width="96dp"
            android:layout_height="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기간"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="시작"
                android:textSize="16dp"/>

            <LinearLayout
                android:id="@+id/add_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12월 30일 (일)"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="39dp"/>

                <TextView
                    android:id="@+id/tv_add_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="96dp"
            android:layout_height="24dp">

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="종료"
                android:textSize="16dp"/>

            <LinearLayout
                android:id="@+id/add_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12월 30일 (일)"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="39dp"/>

                <TextView
                    android:id="@+id/tv_add_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23:59"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>